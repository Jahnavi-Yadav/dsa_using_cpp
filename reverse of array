// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
void reverse(int arr[],int n){
    int start=0;
    int end=n-1;
    while(start!=end){
        swap(arr[start],arr[end]);
        start++;
        end--;
    }
}
void printarray(int arr[], int n){
    for(int i=0;i<n;i++){
        cout<<"arr[i]"<<" ";
    }
    cout<<endl;
}
    

int main(){
    
    int a[6]={1,3,5,7,8,9};
    int b[4]={9,8,7,6};
    
    reverse(a,6);
    reverse(b,4);
    
    printarray(a,6);
    printarray(b,4);
    
    return 0;
    
}
