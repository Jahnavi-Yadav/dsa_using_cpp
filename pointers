// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
int main() {
    int num=5;
    cout<<num<<endl; 
    //address of operator
    cout<<"Address of num is "<<&num<<endl;
    int *ptr=&num;
    cout<<"Address is"<<ptr<<endl; 
    cout<<"Value of pointer is "<<*ptr<<endl;
    //int num=5;
    int a=num;
    a++;
    cout<<"num "<<num<<endl;
    //incrementing pointer and value
    int *p=&num;
    cout<<"Before"<<num<<endl;
    (*p)++;
    cout<<"After"<<num<<endl;
    //cpoying a pointer
    int *q=p;
    cout<<p<<" - "<<q<<endl;
    cout<<*p<<" - "<<*q<<endl;
    int i=4;
    int *t=&i;
    //cout<<(*t)++<<endl;
    *t=*t+1;
    cout<<*t;

    return 0;
}
