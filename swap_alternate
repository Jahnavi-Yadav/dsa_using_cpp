// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
void swapalternate(int arr[], int size){
    for(int i=0;i<size;i+=2){
        if(i+1<size){
            swap(arr[i],arr[i+1]);
        }
    }
}
void printarray(int arr[], int size){
    for(int i=0;i<size;i++){
        cout<<arr[i]<<" ";
    }
    cout<<endl;
}
int main() {
    int even[6]={5,6,7,8,23,56};
    int odd[7]={8,7,5,3,12,45,9};
    swapalternate(even,6);
    printarray(even,6);
    swapalternate(odd,7);
    printarray(odd,7);
    
     
    

    return 0;
}
