// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
int factorial(int n){
    if(n==0)
        return 1;
    else{
        int fact=n*factorial(n-1);
        return fact;
    }
}
int main() {
   int n;
   cout<<"Enter the number "<<endl;
   cin>>n;
   int ans=factorial(n);
   cout<<"Factorial of "<<n<<" is "<<ans;

    return 0;
}
